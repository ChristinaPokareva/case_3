deposit_begin = primary_contribution
deposit_end = 0
year = 0
while year < deposit_time:
    year += 1
    head_of_table()
    month = 0
    while month < 12:
        month += 1
        persent = deposit_persent(deposit_begin,interest_rate)
        depisit_end = sum_deposit(deposit_begin,persent,add_contribution)
        month_deposit(month,deposit_begin,persent,add_contribution,deposit_end)
        deposit_begin = deposit_end 
    end_of_table()

