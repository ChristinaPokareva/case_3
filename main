deposit_time = int(input('Срок размещения капитала (лет):'))
primary_contribution = int(input('Начальный капитал ($):'))
interest_rate = int(input('Процентная ставка (%/мес.):'))
add_contribution = int(input('Инвестиционные вливания ($/мес.):'))


def head_of_table():
    print(year,'год')
    print('-'*74)
    print('|  месяц  | вклад на начало | сумма %   | дополнительный | вклад на конец | ')
    print('|         |     периода     | за месяц  |       вклад    |    периода     | ')
    print ('-'*74)
    
